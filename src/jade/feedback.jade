extends ./extends/layout


block title
  title Обратная связь


block sidebar


  // main nav
  - var navData = [{text: 'Обо мне', url: 'index.html'},  {text: 'Мои работы', url: 'projects.html'},  {text: 'Связаться со мной', url: 'feedback.html'}]
  +nav(navData, 2)(class="sidebar__item")


  include ./includes/contacts


block content


  div(class="area")
    div(class="area__header")
      div(class="area__title") У вас интересный проект? Напишите мне
    div(class="area__body")


      // feedback
      form(action="/", class="form feedback js-validator")


        // group
        +form-group
          +form-row
            +form-col(50)
              +label(for="feedback-name") Имя
              +input(placeholder="Как к Вам обращаться", id="feedback-name", required="true", data-tooltip-content="Вы не ввели имя")
            +form-col(50)
              +label(for="feedback-email") Email
              +input(type="email", placeholder="Куда мне писать", id="feedback-email", required="true", data-tooltip-content="Вы не ввели email", data-tooltip-position="right")


        // group
        +form-group
          +label(for="feedback-comment") Сообщение
          textarea(placeholder="Кратко в чём суть", class="feedback__comment", id="feedback-comment", required="true", data-tooltip-content="Ваш вопрос")


        // group
        +form-group
          +label(for="feedback-captcha") Введите код, указанный на картинке
          +form-row(class="feedback__captcha-row")
            +form-col(50)
              div(class="feedback__captcha")
                img(src="images/captcha.jpg", alt="Каптча", width="171", height="63")
            +form-col(50)
              +input(placeholder="Введите код", class="input_small", id="feedback-captcha", required="true", data-tooltip-content="Вы не ввели код", data-tooltip-position="right")


        // action
        +form-actions
          +form-row
            +form-col(50)
              button(type="submit", class="btn btn_primary") Отправить
            +form-col(50)(class="feedback__reset")
              button(type="reset", class="btn btn_secondary") Очистить